{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/ClipboardListener.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/ClipboardListener.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary;ForceNoAlign"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                // The "--project" switch has been removed from here
                "${workspaceFolder}/ClipboardListener.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Publish as Single EXE",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "-c", "Release",
                "-r", "win-x64",
                "--self-contained", "true",
                "/p:PublishSingleFile=true",
                "/p:IncludeAllContentForSelfExtract=true",
                "/p:PublishTrimmed=false"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile",
            "detail": "Builds and publishes a single executable"
        },
        {
            // This is the fully automatic task, now corrected
            "label": "watch-build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "build",
                 // The "--project" switch has been removed from here too
                "${workspaceFolder}/ClipboardListener.csproj"
            ],
            "problemMatcher": "$msCompile",
            "isBackground": true,
            "runOptions": { "runOn": "folderOpen" }
        }
    ]
}